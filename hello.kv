<Tercon>:
    text: "Acepto los Terminos y Condiciones"
    font_size: 20
    size_hint: (.2, .1)  # Ajusta el tamaño del botón
    size: self.texture_size 

<LoginScreen>:
    cols: 1
    padding: 50
    spacing: 20
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None  
        height: dp(50)
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1  # Color rojo (RGBA)
            Line:
                rectangle: self.x, self.y, self.width, self.height
                width: 1  # Ancho del borde rojo (más delgado)
            
        Slider:
            id: slider
            min: 1
            max: 50
            step: 1
            orientation: "horizontal"
            size_hint_x: None  # Anula el ajuste automático del tamaño en el eje X
            width: dp(200)  # Establece un ancho fijo para el slider
            value: 25  # Valor inicial del slider
            on_value: slider_label.text = str(int(self.value))  # Actualiza el texto del label cuando cambia el valor del slider
        Label:
            id: slider_label
            text: "Edad"
            font_size: 32
    GridLayout:
        cols: 2
        BoxLayout:
            orientation:'vertical'
            Label:
                text: "Nombres y Apellidos"
                font_size: 20
            TextInput
                id: nombre
                size_hint_y: None  
                height: dp(50)
            Label:
                text: "Numero de Cuenta"
                font_size: 20
            TextInput
                id: cuenta
                size_hint_y: None  
                height: dp(50)
        
        BoxLayout:
            orientation:'vertical'

            Label:
                id: click_label
                font_size: 32
            Spinner:
                id: spinner_id
                text: "Select Card"
                values: ["Mastercard", "Visa", "American"]

                on_text: root.spinner_clicked(spinner_id.text)
            Label:
                text: ''

    Tercon:
